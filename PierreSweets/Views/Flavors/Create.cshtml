@{
  Layout = "_Layout";
}

@model PierreSweets.Models.Flavor

<h4>Add a new flavor</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter flavor name", required = "required" })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
  </div>

  <input type="submit" value="Add new flavor" class="btn btn-primary" />
}

<p>@Html.ActionLink("Show all flavors", "Index")</p>