@{
  Layout = "_Layout";
}

@model PierreSweets.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter treat name", required = "required" })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
  </div>

  <input type="submit" value="Add new treat" class="btn btn-primary" />
}

<p>@Html.ActionLink("Show all treats", "Index")</p>